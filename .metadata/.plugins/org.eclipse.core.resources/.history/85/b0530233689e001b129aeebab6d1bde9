package exercicios;

public class TestaMarcos {
	public static void main(String[] args) {
		
		int linha = 0;
		
		for (linha = 0; linha <= 5; linha++) {
			
	
			System.out.print("m");	
				
			
			 if	(linha >= 1) {
			 System.out.print("a");	
			 }
			 if	(linha >= 2) {
				 System.out.print("r");
			 }
			 if	(linha >= 3) {
				 System.out.print("c");
			 }
			 if	(linha >= 4) {
				 System.out.print("o");
			 }
			 if	(linha >= 5) {
				 System.out.print("s");
			 }
			
			 System.out.println();
			}
			
		
	
	}
}



